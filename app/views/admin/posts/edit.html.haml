- title @post.title

- form_for @post, :url => admin_post_path(@post) do |f|
  = f.error_messages
  
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :body
    <br />
    = f.text_area :body
  %p
    = f.label :category_id, "Category"
    = f.collection_select :category_id, Category.all, :id, :title
  %p
    = f.label :published
    = f.check_box :published
  %p
    = f.submit