<% title @post.title %>

<%= render @post %>

<div id="comment_wrapper">
	<h1><%= pluralize @post.comments.length, 'comment' %></h1>
	<ul id="comments">
		<%= render @post.comments %>
	</ul>
	<div id="comment_form">
		<h3>Submit a comment</h3>
		<p>
			Use any <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a> you like, and please be nice.
		</p>
		<% form_for @comment, :url => post_comments_path(@post), :remote => true do |f| %>
			<p>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</p>
			<p>
				<%= f.label :email %>
				<%= f.text_field :email %>
			</p>
			<p>
				<%= f.label :body, "Comment" %>
				<%= f.text_area :body %>
			</p>
			<p>
				<%= f.submit %>
			</p>
		<% end %>
	</div>
</div>